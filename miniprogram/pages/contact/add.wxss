.container {
    padding: 30rpx;
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  
  .form-group {
    background-color: #fff;
    padding: 30rpx;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  }
  
  .label {
    display: block;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 20rpx;
  }
  
  .input {
    border-bottom: 1rpx solid #ddd;
    padding: 10rpx 0;
    font-size: 32rpx;
  }
  
  .submit-button {
    background-color: #3498db;
    color: white;
    font-size: 32rpx;
    padding: 20rpx 0;
    border-radius: 10rpx;
    margin-top: 50rpx;
  }
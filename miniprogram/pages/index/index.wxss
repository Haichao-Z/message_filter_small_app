.container {
    padding: 20rpx;
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    margin-bottom: 30rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
  }
  
  .add-button {
    background-color: #3498db;
    color: white;
    font-size: 28rpx;
    padding: 10rpx 30rpx;
    border-radius: 10rpx;
  }
  
  .contact-list {
    width: 100%;
  }
  
  .contact-item {
    background-color: #fff;
    padding: 30rpx 20rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  }
  
  .contact-name {
    font-size: 32rpx;
    color: #333;
  }
  
  .contact-actions {
    display: flex;
    align-items: center;
  }
  
  .action-buttons {
    display: flex;
    margin-left: 20rpx;
  }
  
  .edit-button, .delete-button {
    font-size: 24rpx;
    padding: 6rpx 20rpx;
    margin-left: 10rpx;
    border-radius: 8rpx;
  }
  
  .edit-button {
    background-color: #f1c40f;
    color: white;
  }
  
  .delete-button {
    background-color: #e74c3c;
    color: white;
  }
  
  .empty-list {
    text-align: center;
    color: #999;
    padding: 100rpx 0;
  }
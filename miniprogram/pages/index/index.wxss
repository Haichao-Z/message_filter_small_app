.container {
    padding: 20rpx;
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    margin-bottom: 30rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
  }
  
  .add-button {
    background-color: #3498db;
    color: white;
    font-size: 28rpx;
    padding: 10rpx 30rpx;
    border-radius: 10rpx;
  }
  
  .contact-list {
    width: 100%;
  }
  
  .contact-item {
    background-color: #fff;
    padding: 30rpx 20rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  }
  
  .contact-name {
    font-size: 32rpx;
    color: #333;
  }
  
  .contact-actions {
    display: flex;
    align-items: center;
  }
  
  .action-buttons {
    display: flex;
    margin-left: 20rpx;
  }
  
  .edit-button, .delete-button {
    font-size: 24rpx;
    padding: 6rpx 20rpx;
    margin-left: 10rpx;
    border-radius: 8rpx;
  }
  
  .edit-button {
    background-color: #f1c40f;
    color: white;
  }
  
  .delete-button {
    background-color: #e74c3c;
    color: white;
  }
  
  .empty-list {
    text-align: center;
    color: #999;
    padding: 100rpx 0;
  }

  /* 添加分享按钮样式 */
.share-button {
    font-size: 24rpx;
    padding: 6rpx 20rpx;
    margin-left: 10rpx;
    border-radius: 8rpx;
    background-color: #3498db;
    color: white;
  }
  
  /* 分享弹窗样式 */
  .share-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }
  
  .modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }
  
  .modal-content {
    position: relative;
    width: 80%;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1001;
  }
  
  .modal-title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .modal-desc {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 30rpx;
    text-align: center;
  }
  
  .qr-code {
    width: 360rpx;
    height: 360rpx;
    margin-bottom: 30rpx;
  }
  
  .forward-button {
    background-color: #3498db;
    color: white;
    width: 80%;
    margin-bottom: 20rpx;
  }
  
  .close-button {
    background-color: #f1f1f1;
    color: #333;
    width: 80%;
  }
/* 在pages/reminder/send.wxss中 */
.container {
    padding: 30rpx;
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  
  .header {
    padding: 20rpx 0;
    margin-bottom: 30rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
  }
  
  .form-container {
    background-color: #fff;
    border-radius: 10rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  }
  
  .form-item {
    margin-bottom: 30rpx;
  }
  
  .label {
    display: block;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 10rpx;
  }
  
  .value {
    font-size: 32rpx;
    color: #333;
  }
  
  .message-input {
    margin-bottom: 50rpx;
  }
  
  .input-area {
    width: 100%;
    height: 200rpx;
    border: 1rpx solid #ddd;
    border-radius: 6rpx;
    padding: 20rpx;
    font-size: 32rpx;
  }
  
  .send-button {
    background-color: #3498db;
    color: white;
    font-size: 32rpx;
    padding: 20rpx 0;
    border-radius: 10rpx;
  }
  
  .tips {
    margin-top: 30rpx;
    text-align: center;
  }
  
  .tip-text {
    font-size: 24rpx;
    color: #999;
  }